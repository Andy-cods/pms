generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String         @id @default(cuid())
  email             String         @unique
  password          String
  name              String
  avatar            String?
  role              UserRole
  isActive          Boolean        @default(true)
  lastLoginAt       DateTime?
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  notificationPrefs Json?
  approvalApproved  Approval[]     @relation("ApprovalApprover")
  approvalSubmitted Approval[]     @relation("ApprovalSubmitter")
  auditLogs         AuditLog[]
  comments          Comment[]
  eventsCreated     Event[]
  filesUploaded     File[]
  notifications     Notification[]
  projectTeams      ProjectTeam[]
  tasksAssigned     TaskAssignee[]
  tasksCreated      Task[]         @relation("TaskCreator")
  tasksReviewing    Task[]         @relation("TaskReviewer")
  eventAttendees    EventAttendee[]
  mediaPlansCreated MediaPlan[]    @relation("MediaPlanCreator")
  budgetEvents      BudgetEvent[]  @relation("BudgetEventCreator")
  adsReportsCreated AdsReport[]    @relation("AdsReportCreator")
  pipelinesAsNVKD    SalesPipeline[] @relation("PipelineNVKD")
  pipelinesAsPM      SalesPipeline[] @relation("PipelinePM")
  pipelinesAsPlanner SalesPipeline[] @relation("PipelinePlanner")

  @@index([email])
  @@index([role])
  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  userAgent String?
  ipAddress String?

  @@index([token])
  @@index([userId])
  @@map("sessions")
}

model Client {
  id           String    @id @default(cuid())
  companyName  String
  contactName  String?
  contactEmail String?
  contactPhone String?
  accessCode   String    @unique
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  projects     Project[]

  @@index([accessCode])
  @@map("clients")
}

model Project {
  id               String         @id @default(cuid())
  code             String         @unique
  name             String
  description      String?
  productType      String?
  status           ProjectStatus  @default(STABLE)
  stage            ProjectStage   @default(INTAKE)
  stageProgress    Int            @default(0)
  startDate        DateTime?
  endDate          DateTime?
  timelineProgress Int            @default(0)
  clientId         String?
  driveLink        String?
  planLink         String?
  trackingLink     String?
  metadata         Json?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  archivedAt       DateTime?
  approvals        Approval[]
  comments         Comment[]
  events           Event[]
  files            File[]
  budget           ProjectBudget?
  kpis             ProjectKPI[]
  logs             ProjectLog[]
  stageHistory     StageHistory[]
  team             ProjectTeam[]
  client           Client?        @relation(fields: [clientId], references: [id])
  tasks            Task[]
  mediaPlans       MediaPlan[]
  budgetEvents     BudgetEvent[]
  adsReports       AdsReport[]
  salesPipeline    SalesPipeline?
  strategicBrief   StrategicBrief?
  phases           ProjectPhase[]

  @@index([code])
  @@index([status])
  @@index([stage])
  @@index([clientId])
  @@map("projects")
}

model ProjectTeam {
  id        String   @id @default(cuid())
  projectId String
  userId    String
  role      UserRole
  isPrimary Boolean  @default(false)
  joinedAt  DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])

  @@unique([projectId, userId, role])
  @@index([projectId])
  @@index([userId])
  @@map("project_teams")
}

model ProjectBudget {
  id            String   @id @default(cuid())
  projectId     String   @unique
  totalBudget   Decimal  @db.Decimal(15, 2)
  monthlyBudget Decimal? @db.Decimal(15, 2)
  spentAmount   Decimal  @default(0) @db.Decimal(15, 2)
  fixedAdFee    Decimal? @db.Decimal(15, 2)
  adServiceFee  Decimal? @db.Decimal(15, 2)
  contentFee    Decimal? @db.Decimal(15, 2)
  designFee     Decimal? @db.Decimal(15, 2)
  mediaFee      Decimal? @db.Decimal(15, 2)
  otherFee      Decimal? @db.Decimal(15, 2)
  budgetPacing  Float?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("project_budgets")
}

model BudgetEvent {
  id           String              @id @default(cuid())
  projectId    String
  mediaPlanId  String?
  stage        String?
  amount       Decimal             @db.Decimal(15, 2)
  type         BudgetEventType
  category     BudgetEventCategory @default(OTHER)
  status       BudgetEventStatus   @default(PENDING)
  note         String?
  createdById  String
  createdAt    DateTime            @default(now())
  project      Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  mediaPlan    MediaPlan?          @relation(fields: [mediaPlanId], references: [id])
  createdBy    User                @relation("BudgetEventCreator", fields: [createdById], references: [id])

  @@index([projectId])
  @@index([mediaPlanId])
  @@index([createdById])
  @@index([status])
  @@index([category])
  @@map("budget_events")
}

model ProjectKPI {
  id          String   @id @default(cuid())
  projectId   String
  kpiType     String
  targetValue Float?
  actualValue Float?
  unit        String?
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([kpiType])
  @@map("project_kpis")
}

model ProjectLog {
  id         String   @id @default(cuid())
  projectId  String
  logDate    DateTime
  rootCause  String?
  action     String?
  nextAction String?
  notes      String?
  createdAt  DateTime @default(now())
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([logDate])
  @@map("project_logs")
}

model StageHistory {
  id            String       @id @default(cuid())
  projectId     String
  fromStage     ProjectStage?
  toStage       ProjectStage
  fromProgress  Int          @default(0)
  toProgress    Int          @default(0)
  changedById   String
  reason        String?
  createdAt     DateTime     @default(now())
  project       Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([createdAt])
  @@map("stage_histories")
}

model Task {
  id             String           @id @default(cuid())
  projectId      String
  parentId       String?
  title          String
  description    String?
  status         TaskStatus       @default(TODO)
  priority       TaskPriority     @default(MEDIUM)
  estimatedHours Float?
  actualHours    Float?
  deadline       DateTime?
  startedAt      DateTime?
  completedAt    DateTime?
  reviewerId     String?
  createdById    String
  orderIndex     Int              @default(0)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  comments       Comment[]
  files          File[]
  assignees      TaskAssignee[]
  dependents     TaskDependency[] @relation("DependsOnTask")
  dependencies   TaskDependency[] @relation("DependentTask")
  createdBy      User             @relation("TaskCreator", fields: [createdById], references: [id])
  parent         Task?            @relation("TaskHierarchy", fields: [parentId], references: [id])
  subtasks       Task[]           @relation("TaskHierarchy")
  project        Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  reviewer       User?            @relation("TaskReviewer", fields: [reviewerId], references: [id])
  phaseItem      ProjectPhaseItem?

  @@index([projectId])
  @@index([parentId])
  @@index([status])
  @@index([deadline])
  @@map("tasks")
}

model TaskAssignee {
  id         String   @id @default(cuid())
  taskId     String
  userId     String
  assignedAt DateTime @default(now())
  task       Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id])

  @@unique([taskId, userId])
  @@index([taskId])
  @@index([userId])
  @@map("task_assignees")
}

model TaskDependency {
  id              String @id @default(cuid())
  taskId          String
  dependsOnTaskId String
  dependsOnTask   Task   @relation("DependsOnTask", fields: [dependsOnTaskId], references: [id], onDelete: Cascade)
  task            Task   @relation("DependentTask", fields: [taskId], references: [id], onDelete: Cascade)

  @@unique([taskId, dependsOnTaskId])
  @@map("task_dependencies")
}

model Approval {
  id              String            @id @default(cuid())
  projectId       String
  type            ApprovalType
  status          ApprovalStatus    @default(PENDING)
  title           String
  description     String?
  submittedById   String
  approvedById    String?
  comment         String?
  deadline        DateTime?
  escalatedAt     DateTime?
  escalationLevel Int               @default(0)
  submittedAt     DateTime          @default(now())
  respondedAt     DateTime?
  history         ApprovalHistory[]
  approvedBy      User?             @relation("ApprovalApprover", fields: [approvedById], references: [id])
  project         Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  submittedBy     User              @relation("ApprovalSubmitter", fields: [submittedById], references: [id])
  files           File[]

  @@index([projectId])
  @@index([status])
  @@index([type])
  @@map("approvals")
}

model ApprovalHistory {
  id          String         @id @default(cuid())
  approvalId  String
  fromStatus  ApprovalStatus
  toStatus    ApprovalStatus
  comment     String?
  changedById String
  changedAt   DateTime       @default(now())
  approval    Approval       @relation(fields: [approvalId], references: [id], onDelete: Cascade)

  @@index([approvalId])
  @@map("approval_histories")
}

model File {
  id           String       @id @default(cuid())
  projectId    String?
  taskId       String?
  approvalId   String?
  name         String
  originalName String
  path         String
  size         Int
  mimeType     String
  category     FileCategory @default(OTHER)
  version      Int          @default(1)
  previousId   String?
  tags         String[]
  uploadedById String
  uploadedAt   DateTime     @default(now())
  approval     Approval?    @relation(fields: [approvalId], references: [id], onDelete: Cascade)
  previous     File?        @relation("FileVersions", fields: [previousId], references: [id])
  nextVersions File[]       @relation("FileVersions")
  project      Project?     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  task         Task?        @relation(fields: [taskId], references: [id], onDelete: Cascade)
  uploadedBy   User         @relation(fields: [uploadedById], references: [id])

  @@index([projectId])
  @@index([taskId])
  @@index([category])
  @@map("files")
}

model Event {
  id             String          @id @default(cuid())
  title          String
  description    String?
  type           EventType
  startTime      DateTime
  endTime        DateTime?
  isAllDay       Boolean         @default(false)
  recurrence     String?
  location       String?
  meetingLink    String?
  projectId      String?
  taskId         String?
  createdById    String
  reminderBefore Int?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  attendees      EventAttendee[]
  createdBy      User            @relation(fields: [createdById], references: [id])
  project        Project?        @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([startTime])
  @@index([type])
  @@map("events")
}

model EventAttendee {
  id      String  @id @default(cuid())
  eventId String
  userId  String?
  email   String?
  name    String?
  status  String  @default("pending")
  event   Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([eventId])
  @@index([userId])
  @@map("event_attendees")
}

model Notification {
  id           String    @id @default(cuid())
  userId       String
  type         String
  title        String
  content      String
  link         String?
  isRead       Boolean   @default(false)
  readAt       DateTime?
  telegramSent Boolean   @default(false)
  createdAt    DateTime  @default(now())
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}

model Comment {
  id        String    @id @default(cuid())
  projectId String?
  taskId    String?
  content   String
  parentId  String?
  authorId  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  author    User      @relation(fields: [authorId], references: [id])
  parent    Comment?  @relation("CommentReplies", fields: [parentId], references: [id])
  replies   Comment[] @relation("CommentReplies")
  project   Project?  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  task      Task?     @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([taskId])
  @@map("comments")
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  action     String
  entityType String
  entityId   String?
  oldValue   Json?
  newValue   Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())
  user       User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([entityType])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  updatedAt DateTime @updatedAt

  @@map("system_settings")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  TECHNICAL
  NVKD
  PM
  PLANNER
  ACCOUNT
  CONTENT
  DESIGN
  MEDIA
}

enum ProjectStatus {
  STABLE
  WARNING
  CRITICAL
}

enum ProjectStage {
  INTAKE
  DISCOVERY
  PLANNING
  UNDER_REVIEW
  PROPOSAL_PITCH
  ONGOING
  OPTIMIZATION
  COMPLETED
  CLOSED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
  BLOCKED
  CANCELLED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum ApprovalType {
  PLAN
  CONTENT
  BUDGET
  FILE
  MEDIA_PLAN
}

enum ApprovalStatus {
  PENDING
  APPROVED
  REJECTED
  CHANGES_REQUESTED
}

enum EventType {
  MEETING
  DEADLINE
  MILESTONE
  REMINDER
}

enum FileCategory {
  BRIEF
  PLAN
  PROPOSAL
  REPORT
  CREATIVE
  RAW_DATA
  CONTRACT
  OTHER
}

enum MediaPlanType {
  ADS
  DESIGN
  CONTENT
}

enum MediaPlanStatus {
  DRAFT
  PENDING_APPROVAL
  APPROVED
  ACTIVE
  COMPLETED
  CANCELLED
}

enum BudgetEventType {
  ALLOC
  SPEND
  ADJUST
}

enum BudgetEventCategory {
  FIXED_AD
  AD_SERVICE
  CONTENT
  DESIGN
  MEDIA
  OTHER
}

enum BudgetEventStatus {
  PENDING
  APPROVED
  REJECTED
  PAID
}

// ============================================
// SALES PIPELINE & WORKFLOW ENUMS
// ============================================

enum PipelineStage {
  LEAD
  QUALIFIED
  EVALUATION
  NEGOTIATION
  WON
  LOST
}

enum PipelineDecision {
  PENDING
  ACCEPTED
  DECLINED
}

enum BriefStatus {
  DRAFT
  SUBMITTED
  APPROVED
  REVISION_REQUESTED
}

enum ClientTier {
  A
  B
  C
  D
}

enum ProjectPhaseType {
  KHOI_TAO_PLAN
  SETUP_CHUAN_BI
  VAN_HANH_TOI_UU
  TONG_KET
}

model AdsReport {
  id           String          @id @default(cuid())
  projectId    String
  period       AdsReportPeriod
  reportDate   DateTime
  impressions  Int             @default(0)
  clicks       Int             @default(0)
  ctr          Float           @default(0)
  cpc          Decimal         @default(0) @db.Decimal(10, 2)
  cpm          Decimal         @default(0) @db.Decimal(10, 2)
  cpa          Decimal         @default(0) @db.Decimal(10, 2)
  conversions  Int             @default(0)
  roas         Float           @default(0)
  adSpend      Decimal         @default(0) @db.Decimal(15, 2)
  platform     AdsPlatform
  campaignName String?
  source       AdsReportSource @default(MANUAL)
  createdById  String
  createdAt    DateTime        @default(now())
  project      Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdBy    User            @relation("AdsReportCreator", fields: [createdById], references: [id])

  @@index([projectId])
  @@index([reportDate])
  @@index([platform])
  @@index([period])
  @@map("ads_reports")
}

enum AdsReportPeriod {
  DAILY
  WEEKLY
  MONTHLY
}

enum AdsPlatform {
  FACEBOOK
  GOOGLE
  TIKTOK
  OTHER
}

enum AdsReportSource {
  MANUAL
  ZAPIER
}

model MediaPlan {
  id          String          @id @default(cuid())
  projectId   String
  project     Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  name        String
  type        MediaPlanType   @default(ADS)
  month       Int
  year        Int
  version     Int             @default(1)
  status      MediaPlanStatus @default(DRAFT)
  totalBudget Decimal         @db.Decimal(15, 2)
  startDate   DateTime
  endDate     DateTime
  notes       String?
  createdById String
  createdBy   User            @relation("MediaPlanCreator", fields: [createdById], references: [id])
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  items       MediaPlanItem[]
  budgetEvents BudgetEvent[]

  @@index([projectId])
  @@index([projectId, type])
  @@index([status])
  @@map("media_plans")
}

model MediaPlanItem {
  id           String    @id @default(cuid())
  mediaPlanId  String
  mediaPlan    MediaPlan @relation(fields: [mediaPlanId], references: [id], onDelete: Cascade)
  channel      String
  campaignType String
  objective    String
  budget       Decimal   @db.Decimal(15, 2)
  startDate    DateTime
  endDate      DateTime
  targetReach  Int?
  targetClicks Int?
  targetLeads  Int?
  targetCPL    Decimal?  @db.Decimal(10, 2)
  targetCPC    Decimal?  @db.Decimal(10, 2)
  targetROAS   Decimal?  @db.Decimal(5, 2)
  status       String    @default("planned")
  orderIndex   Int       @default(0)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([mediaPlanId])
  @@map("media_plan_items")
}

// ============================================
// SALES PIPELINE (Bước 1)
// ============================================

model SalesPipeline {
  id                String            @id @default(cuid())

  // Basic Info (Sale điền)
  projectName       String
  status            PipelineStage     @default(LEAD)
  currentStage      ProjectStage      @default(INTAKE)
  nvkdId            String
  nvkd              User              @relation("PipelineNVKD", fields: [nvkdId], references: [id])

  // Client Info
  clientType        String?
  productType       String?
  licenseLink       String?
  campaignObjective String?
  initialGoal       String?

  // Budget & Fees
  totalBudget       Decimal?          @db.Decimal(15, 2)
  monthlyBudget     Decimal?          @db.Decimal(15, 2)
  spentAmount       Decimal?          @default(0) @db.Decimal(15, 2)
  fixedAdFee        Decimal?          @db.Decimal(15, 2)
  adServiceFee      Decimal?          @db.Decimal(15, 2)
  contentFee        Decimal?          @db.Decimal(15, 2)
  designFee         Decimal?          @db.Decimal(15, 2)
  mediaFee          Decimal?          @db.Decimal(15, 2)
  otherFee          Decimal?          @db.Decimal(15, 2)
  upsellOpportunity String?

  // PM Evaluation (PM điền)
  pmId              String?
  pm                User?             @relation("PipelinePM", fields: [pmId], references: [id])
  plannerId         String?
  planner           User?             @relation("PipelinePlanner", fields: [plannerId], references: [id])
  costNSQC          Decimal?          @db.Decimal(15, 2)
  costDesign        Decimal?          @db.Decimal(15, 2)
  costMedia         Decimal?          @db.Decimal(15, 2)
  costKOL           Decimal?          @db.Decimal(15, 2)
  costOther         Decimal?          @db.Decimal(15, 2)

  // Calculated (auto)
  cogs              Decimal?          @db.Decimal(15, 2)
  grossProfit       Decimal?          @db.Decimal(15, 2)
  profitMargin      Float?

  // Client Evaluation
  clientTier        ClientTier?
  marketSize        String?
  competitionLevel  String?
  productUSP        String?
  averageScore      Float?
  audienceSize      String?
  productLifecycle  String?
  scalePotential    String?

  // Weekly Notes (JSONB)
  weeklyNotes       Json?

  // Decision
  decision          PipelineDecision  @default(PENDING)
  decisionDate      DateTime?
  decisionNote      String?

  // Relations
  projectId         String?           @unique
  project           Project?          @relation(fields: [projectId], references: [id])
  strategicBrief    StrategicBrief?

  // Audit
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  @@index([status])
  @@index([nvkdId])
  @@index([pmId])
  @@index([decision])
  @@index([currentStage])
  @@map("sales_pipelines")
}

// ============================================
// STRATEGIC BRIEF (Bước 2)
// ============================================

model StrategicBrief {
  id              String         @id @default(cuid())
  pipelineId      String         @unique
  pipeline        SalesPipeline  @relation(fields: [pipelineId], references: [id], onDelete: Cascade)
  projectId       String?        @unique
  project         Project?       @relation(fields: [projectId], references: [id])
  status          BriefStatus    @default(DRAFT)
  completionPct   Int            @default(0)
  submittedAt     DateTime?
  approvedAt      DateTime?
  approvedById    String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  sections        BriefSection[]

  @@index([status])
  @@index([pipelineId])
  @@map("strategic_briefs")
}

model BriefSection {
  id          String         @id @default(cuid())
  briefId     String
  brief       StrategicBrief @relation(fields: [briefId], references: [id], onDelete: Cascade)
  sectionNum  Int
  sectionKey  String
  title       String
  data        Json?
  isComplete  Boolean        @default(false)
  updatedAt   DateTime       @updatedAt

  @@unique([briefId, sectionNum])
  @@index([briefId])
  @@map("brief_sections")
}

// ============================================
// PROJECT PHASES (Bước 4)
// ============================================

model ProjectPhase {
  id            String           @id @default(cuid())
  projectId     String
  project       Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  phaseType     ProjectPhaseType
  name          String
  weight        Int
  progress      Int              @default(0)
  orderIndex    Int
  startDate     DateTime?
  endDate       DateTime?
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  items         ProjectPhaseItem[]

  @@unique([projectId, phaseType])
  @@index([projectId])
  @@map("project_phases")
}

model ProjectPhaseItem {
  id          String        @id @default(cuid())
  phaseId     String
  phase       ProjectPhase  @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  name        String
  description String?
  weight      Int           @default(0)
  isComplete  Boolean       @default(false)
  taskId      String?       @unique
  task        Task?         @relation(fields: [taskId], references: [id])
  orderIndex  Int           @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([phaseId])
  @@index([taskId])
  @@map("project_phase_items")
}
