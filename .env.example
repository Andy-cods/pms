# ============================================
# BC Agency PMS - Environment Variables Template
# ============================================
# Copy this file to .env.development or .env.production
# NEVER commit .env files with real credentials to git
# ============================================

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
APP_NAME=bc-agency-pms
APP_PORT=3001
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# ============================================
# DATABASE - PostgreSQL
# ============================================
POSTGRES_USER=bc_user
POSTGRES_PASSWORD=bc_password
POSTGRES_DB=bc_pms
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Prisma Database URL
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?schema=public

# ============================================
# CACHE - Redis
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}

# ============================================
# FILE STORAGE - MinIO
# ============================================
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=bc-agency-files
MINIO_USE_SSL=false

# External URL for presigned URLs
MINIO_PUBLIC_URL=http://localhost:9000

# ============================================
# AUTHENTICATION - JWT
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# TELEGRAM NOTIFICATIONS
# ============================================
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ALERT_CHAT_ID=your-chat-id

# ============================================
# ENCRYPTION
# ============================================
# Generate with: openssl rand -base64 32
ENCRYPTION_SECRET=your-encryption-secret-key-32-chars
ENCRYPTION_SALT=your-encryption-salt-16-chars

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# MONITORING (Optional - Phase 4)
# ============================================
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION=15d

# ============================================
# DOMAIN & SSL (Production)
# ============================================
DOMAIN=pms.bcagency.com
SSL_EMAIL=admin@bcagency.com
