# ============================================
# BC Agency PMS - Development Environment
# ============================================
# Local development settings
# ============================================

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
APP_NAME=bc-agency-pms
APP_PORT=3001
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# ============================================
# DATABASE - PostgreSQL
# ============================================
POSTGRES_USER=bc_user
POSTGRES_PASSWORD=bc_password
POSTGRES_DB=bc_pms
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Prisma Database URL (for local development, use localhost:5433)
DATABASE_URL=postgresql://bc_user:bc_password@localhost:5433/bc_pms?schema=public

# ============================================
# CACHE - Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_URL=redis://localhost:6380

# ============================================
# FILE STORAGE - MinIO
# ============================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=bc-agency-files
MINIO_USE_SSL=false
MINIO_PUBLIC_URL=http://localhost:9000

# ============================================
# AUTHENTICATION - JWT
# ============================================
JWT_SECRET=dev-secret-key-not-for-production-use-only-for-local-development-testing
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# TELEGRAM NOTIFICATIONS (Optional for dev)
# ============================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALERT_CHAT_ID=

# ============================================
# ENCRYPTION
# ============================================
ENCRYPTION_SECRET=dev-encryption-secret-32chars!
ENCRYPTION_SALT=dev-salt-16chars

# ============================================
# RATE LIMITING (Relaxed for dev)
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=1000
